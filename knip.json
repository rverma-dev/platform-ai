{
  "$schema": "https://unpkg.com/knip@3/schema.json",
  "ignore": ["**/setupTests.ts", "**/.eslintrc.js", "**/config.d.ts"],
  "ignoreDependencies": [
    "better-sqlite3",
    "app",
    "@testing-library/jest-dom",
    "webpack-env",
    "lint-staged",
    "@types/lodash",
    "@types/d3"
  ],
  "workspaces": {
    "apps/*": {
      "entry": "index.ts",
      "project": "apps/**/*.ts"
    },
    "packages/*": {
      "entry": "index.ts",
      "project": "packages/**/*.ts"
    }
  }
}
