{
  "name": "enterprise-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/backstage/packages/*",
    "apps/backstage/plugins/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.6.0",
  "description": "This monorepo contains three main projects:",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
